<%= render '/locals/local_sidebar'%>

<h1>Listing Events</h1>
<div class='index_table'>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Start t</th>
      <th>End t</th>
      <th colspan="3" style="text-align: center">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.start_t %></td>
        <td><%= event.end_t %></td>
        <td><%= link_to 'Show', local_event_path(@local,event) %></td>
        <td><%= link_to 'Edit', edit_local_event_path(@local,event) %></td>
        <td><%= link_to 'Destroy', [@local,event], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Event', new_local_event_path(@local) %>
